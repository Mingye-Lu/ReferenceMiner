{
  "name": "referenceminer-installer",
  "private": true,
  "version": "1.0.0",
  "main": "main.cjs",
  "scripts": {
    "dev": "electron .",
    "build": "npx electron-builder"
  },
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.referenceminer.installer",
    "productName": "ReferenceMiner Installer",
    "directories": {
      "output": "../dist-installer"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "renderer/**",
      "assets/**",
      "payload/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "payload",
        "to": "payload"
      }
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "dir",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false
    }
  }
}
